{% extends "glynn-admin/base.html.twig" %}

{% block title %}
    Groups - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="bg-dark text-white py-3">
        <div class="container">
            <h1>Groups</h1>
        </div>
    </div>
    <div class="container">
        <div class="py-3">
            <a href="{{ path('disjfa_user_group_create') }}" class="btn btn-primary">
                Create new group
            </a>
        </div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for group in groups %}
                <tr>
                    <td>
                        <a href="{{ path('disjfa_user_group_show', {'group': group.id}) }}">
                            {{ group.name }}
                        </a>
                    </td>
                    <td>
                        {{ group.users | length }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2"><em>No groups found</em></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
