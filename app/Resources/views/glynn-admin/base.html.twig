<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Glynn admin{% endblock %}</title>
    <meta name="description" content="{% block description %}{% endblock %}">

    <link rel="stylesheet" href="{{ asset('glynn-admin/css/glynn-admin.css') }}">
</head>
<body>
<div class="page">
    <div class="page-sidebar bg-inverse">
        <div class="sidebar">
            <button class="navbar-toggler pull-right hidden-md-up pull-xs-right p-a-1" type="button"
                    data-toggle="collapse" data-target="#main-menu">
                &#9776;
            </button>
            <div class="text-md-center p-a-1">
                <a class="site-title" href="{{ path('glynn-admin-homepage') }}">
                    <img src="{{ asset("/glynn-admin/img/barista-icons_coffea-arabica.svg") }}" alt="" title="">
                    <span class="hidden-sm-up">

                    </span>
                </a>
            </div>
            <div class="collapse navbar-toggleable-sm" id="main-menu">
                {% if app.user %}
                    <a class="sidebar-user" href="{{ path('fos_user_profile_show') }}">
                        <div class="media">
                            <div class="media-left">
                                {#<img src="{{ "/assets/profile.jpg" | prepend: site.baseurl }}" alt="Profile image" class="img-circle img-fluid sidebar-user-img">#}
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading">{{ app.user.username }}</h4>
                                {{ app.user.email }}
                            </div>
                        </div>
                    </a>
                {% endif %}
                {{ knp_menu_render('glynn-admin', {'currentClass': 'active', 'ancestorClass': 'active', 'depth':3, 'template': 'glynn-admin/menu.html.twig'}) }}
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="page-main-bg container">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>
{% block javascripts %}
    <script src="{{ asset('glynn-admin/js/glynn-admin.js') }}"></script>
{% endblock %}
</body>
</html>
